<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.crm_system.springbootback.mapper.UserMapper">
    <select id="selectUserPage" resultType="com.crm_system.springbootback.entity.User">
        select * from user
        <where>
            <if test="keyword !=null and keyword !='' ">
                or username like CONCAT('%',#{keyword},'%')
                or email like CONCAT('%',#{keyword},'%')
                or area like CONCAT('%',#{keyword},'%')
                or status like CONCAT('%',#{keyword},'%')
            </if>
        </where>
    </select>
    <update id="setTime">
        update user set positive_time=now()
        <where>
            id=#{id}
        </where>
    </update>
    <update id="updateStatus">
        update user set status=#{status}
        <where>
            id=#{id}
        </where>
    </update>
    <update id="updateSeller">
        update user set seller=#{new_seller}
        <where>
            username=#{customer}
        </where>
    </update>
</mapper>